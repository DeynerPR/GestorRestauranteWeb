@model GestorDeRestaurante.Model.Platillo

@{
    ViewData["Title"] = "Detalle";
}

<br/>
<h1>Detalle de Platillo</h1>

<br/>
<div>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
            <br/>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
            <br/>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
            <br/>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class = "col-sm-10">
                            <img src="data:image;base64,@System.Convert.ToBase64String(Model.Imagen)" height="200px" width="200px" class="rounded-3"> </img>
        </dd>
    </dl>
</div>

<br/>
<div>
    <a asp-action="Index">Volver al Menu</a>  |  
    @Html.ActionLink("Editar", "Editar", new { id = Model.Id })
</div>
